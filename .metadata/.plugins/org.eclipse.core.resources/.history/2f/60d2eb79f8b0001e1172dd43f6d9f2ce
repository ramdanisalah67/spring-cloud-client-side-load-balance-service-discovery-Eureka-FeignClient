package com.example.demo.Controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

@RestController
@RequestMapping("api/buyProduct/")
public class buyProductController {

	@Autowired
	private RestTemplate restTemplate;
	
	
	@GetMapping("buy/{priceOfProduct}")
	public String buyProuct(@PathVariable int priceOfProduct) {
		
		int a =Integer.parseInt(restTemplate.getForObject("http://payment-service/api/payment/"+priceOfProduct, String.class));
		
		if(a>50) return "price over 50";
		else return "price less than 50";
		
	}
}
